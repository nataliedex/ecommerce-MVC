<%- include('partials/headerloggedin') -%>
    <main> 
        
        <section id="gallery">
            <div class="row w-100 my-md-3 ps-md-3">
                <% for(let i = 0; i < product.length; i++){ %>
                    
                        <div class="col-md-4 mb-3">
                            <a href="/product/<%= product[i]._id%>">
                                <div class="bg-body-tertiary me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden"> 
                                    <div class="my-3 p-3"> 
                                        <h4 class="display-5 text-wrap fs-4 fw-bold"><%= product[i].product %></h4> 
                                    </div> 
                                    <div class="bg-dark shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0; overflow: hidden;">
                                        <img src="<%= product[i].image %>" alt="<%= product[i].product %>" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                    <div class="my-3 p-3"> 
                                        <p class="lead fs-6">Price: $<%= product[i].price %></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                <% } %>
            </div>
        </section>

        <section id="sales">
            <div class="row w-80 my-md-3 ps-md-3">
                This is where the sales will populate
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Order Number</th>
                        <th scope="col">Num of Items</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Address</th>
                        <th scope="col">Address2</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip Code</th>
                      </tr>
                    </thead>
                    <tbody>
                        <!-- create a for loop to get all of the orders from database -->
                      <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                      </tr>
                      
                    </tbody>
                  </table>
            </div>
            

        </section>
        

    </main>
<%- include('partials/footer') -%>