
<%- include('partials/header') -%>


    <main> 

    <div class="mx-auto" style="width: 80%;"> 
        <div class="col"> 
            <div class=" card shadow-sm"> 
                <img 
                    src="<%= product.image %>" 
                    alt="<%= product.product %>" 
                    class="card-img-top" 
                    style="max-height: 500px; width: auto; margin: 10px auto; display: block;">
                <div class="card-body"> 
                    <p class="card-text"><strong>Name: </strong><%= product.product %></p> 
                    <p class="card-text"><strong>Description: </strong> <%= product.description %></p> 
                    <p class="card-text"><strong>Price: </strong> <%= product.price %></p> 
                    <p class="card-text"><strong>Quantity: </strong> <%= product.quantity %></p> 
                    <% if(currentUser && currentUser._id.toString() === product.company.toString()){ %>
                        <div class="d-flex justify-content-between align-items-center"> 
                            <div class="btn-group"> 
                                <a href="/product/editItem/<%= product._id %>" class="btn btn-sm btn-outline-secondary">
                                    Edit
                                </a>
            
                                <form 
                                    action="/product/removeItem/<%= product._id %>?_method=DELETE"
                                    method="POST"
                                >
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Delete</button>
                                </form>
                                
                            </div>  
                        </div> 
                    <% } else { %>
                        <div class="d-flex justify-content-between align-items-center"> 
                            <div class="btn-group"> 
                                <!-- update this form to add ability to add to cart -->
                                <form
                                    action="/product/<%= product._id %>/addToCart?_method=POST"
                                    method="POST"
                                >
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                                </form>
                            </div>
                        </div> 
                    <% } %>

                </div> 
            </div> 
        </div>
    </div>
    </main>
<%- include('partials/footer') -%>